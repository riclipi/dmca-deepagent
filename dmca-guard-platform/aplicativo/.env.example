# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dmca_guard"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="re_your_api_key"
RESEND_SENDER_FROM_EMAIL="noreply@yourdomain.com"
RESEND_DOMAIN="yourdomain.com"
RESEND_SENDER_NAME="DMCA Guard"

# Super User
SUPER_USER_EMAIL="admin@yourdomain.com"

# Redis Configuration (REQUIRED IN PRODUCTION)
# Upstash Redis is recommended for serverless deployments
# Create a free instance at: https://upstash.com
# 
# Without these variables:
# - Development: Uses in-memory MockRedis (data lost on restart)
# - Production: Application will fail to start
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
OTEL_SERVICE_NAME="dmca-guard"

# Search API Keys (REQUIRED IN PRODUCTION)
# At least one search API must be configured for the system to work
# Serper API (recommended): https://serper.dev
SERPER_API_KEY=""
# Google Custom Search API: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=""
GOOGLE_CSE_ID=""

# Environment
NODE_ENV="development"

# Security Secrets (REQUIRED IN PRODUCTION)
# Generate secure secrets with: openssl rand -base64 32
API_SIGNING_SECRET="your-super-secret-signing-key-here-change-in-production"
CRON_SECRET="your-cron-secret-key-here-change-in-production"

# Rate Limiting (Optional)
# Set to 'true' to disable rate limiting (useful for testing)
DISABLE_RATE_LIMIT="false"

# Image Analysis APIs (Optional - Not yet implemented)
# GOOGLE_VISION_API_KEY="your-google-vision-api-key"
# AWS_REKOGNITION_ACCESS_KEY="your-aws-access-key"
# AWS_REKOGNITION_SECRET_KEY="your-aws-secret-key"

# Monitoring and Analytics (Optional)
# SENTRY_DSN="your-sentry-dsn"
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
# OTEL_SERVICE_NAME="dmca-guard-platform"